<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:Behaviors="clr-namespace:Rogue.MetroFire.UI.Behaviors" x:Class="Rogue.MetroFire.UI.Views.PasteView"
        Title="PasteView" Height="300" Width="300" Background="{x:Null}" WindowStyle="None" AllowsTransparency="True" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
	<Window.Resources>
		<Color x:Key="_backColor">#FFE4FFFF</Color>
	</Window.Resources>
	<i:Interaction.Behaviors>
		<!--<Behaviors:BorderlessWindowBehavior/>-->
	</i:Interaction.Behaviors>
	<VisualStateManager.VisualStateGroups>
		<VisualStateGroup x:Name="VisualStateGroup">
			<VisualState x:Name="BaseState"/>
			<VisualState x:Name="UploadingState">
				<Storyboard>
					<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="button">
						<DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}"/>
					</ObjectAnimationUsingKeyFrames>
					<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="progressBar">
						<DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
					</ObjectAnimationUsingKeyFrames>
				</Storyboard>
			</VisualState>
		</VisualStateGroup>
	</VisualStateManager.VisualStateGroups>
	<DockPanel>
		
    	<Path Data="M230.07292,241.66893 L273.22812,241.6686 230.5,277.5" Height="36.833" Margin="128.167,-1,127.667,0" Stretch="Fill" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" StrokeThickness="0">
    		<Path.Fill>
    			<SolidColorBrush Color="{DynamicResource MetroBlue}"/>
    		</Path.Fill>
    	</Path>
    	<Grid>
    		<Grid.Background>
    			<SolidColorBrush Color="{DynamicResource MetroBlue}"/>
    		</Grid.Background>
    		<Grid.RowDefinitions>
    			<RowDefinition Height="0.205*"/>
    			<RowDefinition Height="0.628*"/>
    			<RowDefinition Height="0.167*"/>
    		</Grid.RowDefinitions>
    		<TextBlock TextWrapping="Wrap" Text="Upload this image?" Style="{DynamicResource MetroLargeLightHeader}" TextAlignment="Center" Foreground="White"/>
    		<Button x:Name="button" Content="Upload" HorizontalAlignment="Center" 
					Command="{Binding PasteCommand}"
					VerticalAlignment="Center" Grid.Row="2" Style="{DynamicResource MetroBigButton}"/>
    		<Image Margin="0" Grid.Row="1" Source="{Binding BitmapSource}"/>
    		<ProgressBar x:Name="progressBar" Style="{DynamicResource SimpleProgressBar}" Grid.Row="2" Margin="5" Visibility="Hidden" IsIndeterminate="True"/>
    	</Grid>
    </DockPanel>
</Window>
